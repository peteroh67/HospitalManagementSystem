<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ponomic.hospitalmanagementsystem.controllers.HelloController">
    <top>
        <Pane styleClass="header">
            <VBox>
                <padding>
                    <Insets top="20" bottom="30" left="80"/>
                </padding>
                <Label text="HospitalFX" styleClass="headerLabel">
                    <font>
                        <Font size="50.0" />
                    </font>
                </Label>
                <Label text="Health &amp; Care" styleClass="headerLabel">
                    <padding>
                        <Insets left="5"/>
                    </padding>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>

        </Pane>
    </top>
    <center>
        <GridPane hgap="10" vgap="8" alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="20"/>
            </padding>
            <Button text="Dashboard" fx:id="btnDashboard" onAction="#onButtonClick" styleClass="button" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Button text="Patients" fx:id="btnPatients" onAction="#onButtonClick" styleClass="button" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="Wards" fx:id="btnWards" onAction="#onButtonClick" styleClass="button" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button text="Teams" fx:id="btnTeams" onAction="#onButtonClick" styleClass="button" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="Help" fx:id="btnHelp" onAction="#onButtonClick" styleClass="button" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="Settings" styleClass="button" onAction="#onButtonClick" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        </GridPane>
    </center>
</BorderPane>

